<?xml version="1.0" encoding="utf-8"?>

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        tools:context=".MainActivity">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nestedScrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp">

                    <com.progmob.letstour.utils.KenBurnsEffect
                        android:id="@+id/ken_burns_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start|bottom"
                        android:layout_marginLeft="24dp"
                        android:layout_marginBottom="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="-12dp"
                            android:fontFamily="@font/poppins"
                            android:text="LetsTour"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:text="Tour Experience That Deeper Than Ever"
                            android:textColor="@color/colorSecondaryText"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <android.support.v7.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:theme="@style/CustomActionBar"
                        app:layout_scrollFlags="enterAlways" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:visibility="gone"
                        android:id="@+id/cardIntro"
                        android:layout_width="265dp"
                        android:layout_height="92dp"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/colorPrimaryText"
                        card_view:cardCornerRadius="8dp"
                        card_view:cardElevation="4dp"
                        card_view:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:alpha="0.6"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/kota" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/card_intro_title"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Explore Something New"
                                        android:textAlignment="center"
                                        android:textColor="@color/colorSecondaryText"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <!--<Button-->
                                    <!--android:id="@+id/main_learn_more"-->
                                    <!--android:layout_width="100dp"-->
                                    <!--android:layout_height="23dp"-->
                                    <!--android:layout_gravity="center"-->
                                    <!--android:background="@color/colorAccent"-->
                                    <!--android:elevation="3dp"-->
                                    <!--android:text="Login / Register"-->
                                    <!--android:textAllCaps="false"-->
                                    <!--android:textColor="@color/colorSecondaryText"-->
                                    <!--android:textSize="12sp" />-->
                                </LinearLayout>

                            </FrameLayout>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginLeft="24dp"
                        android:text="Locations"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/main_countries_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginLeft="24dp"

                        android:text="Categories"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <LinearLayout
                                android:id="@+id/recreational"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="25"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <android.support.design.widget.FloatingActionButton
                                    android:layout_width="69dp"
                                    android:layout_height="71dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/farmer"
                                    app:backgroundTint="@color/colorSecondaryText"
                                    app:borderWidth="0dp"
                                    app:elevation="2dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="Recreational"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="@dimen/category_fontsize"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/dance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="25"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <android.support.design.widget.FloatingActionButton
                                    android:layout_width="69dp"
                                    android:layout_height="71dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/dance"
                                    app:backgroundTint="@color/colorSecondaryText"
                                    app:borderWidth="0dp"
                                    app:elevation="2dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="Cultural"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="@dimen/category_fontsize"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cook"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="25"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <android.support.design.widget.FloatingActionButton
                                    android:layout_width="69dp"
                                    android:layout_height="71dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/food"
                                    app:backgroundTint="@color/colorSecondaryText"
                                    app:borderWidth="0dp"
                                    app:elevation="2dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="Nature"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="@dimen/category_fontsize"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/handycraft"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="25"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <android.support.design.widget.FloatingActionButton
                                    android:layout_width="69dp"
                                    android:layout_height="71dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/handycraft"
                                    app:backgroundTint="@color/colorSecondaryText"
                                    app:borderWidth="0dp"
                                    app:elevation="2dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="Pleasure"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="@dimen/category_fontsize"
                                    android:textStyle="normal" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:weightSum="100">

                            <LinearLayout
                                android:id="@+id/itdesign"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="25"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <android.support.design.widget.FloatingActionButton
                                    android:layout_width="69dp"
                                    android:layout_height="71dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/it"
                                    app:backgroundTint="@color/colorSecondaryText"
                                    app:borderWidth="0dp"
                                    app:elevation="2dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="Religious"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="@dimen/category_fontsize"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/herds"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="25"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <android.support.design.widget.FloatingActionButton
                                    android:layout_width="69dp"
                                    android:layout_height="71dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/herd"
                                    app:backgroundTint="@color/colorSecondaryText"
                                    app:borderWidth="0dp"
                                    app:elevation="2dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="Medical Pilgrimage"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="@dimen/category_fontsize"
                                    android:textStyle="normal" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/community"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="25"
                                android:orientation="vertical"
                                android:padding="4dp">

                                <android.support.design.widget.FloatingActionButton
                                    android:layout_width="69dp"
                                    android:layout_height="71dp"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/design"
                                    app:backgroundTint="@color/colorSecondaryText"
                                    app:borderWidth="0dp"
                                    app:elevation="2dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:text="Adventour"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="@dimen/category_fontsize"
                                    android:textStyle="normal" />
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/view_pager_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.constraint.ConstraintLayout>